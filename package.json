{
  "name": "birthday-wishes",
  "version": "1.0.0",
  "description": "Automatic birthday wishes",
  "main": "src/app.js",
  "scripts": {
    "build": "babel src --out-dir dist --source-maps inline --copy-files",
    "dev": "better-npm-run dev",
    "test": "cross-env NODE_ENV=test npm run seeding && better-npm-run test",
    "start": "npm run seeding && npm run build && node --require @babel/polyfill ./dist/app.js",
    "migrate": "npx sequelize db:migrate",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "seeding": "npm run migrate:reset && npm run seed",
    "reset:db": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run seeding"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec npx babel-node src/app.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "test": {
      "command": "nyc --reporter=html --reporter=text mocha --require @babel/register ./tests/*.test.js --timeout 200000 --exit || true",
      "env": {
        "NODE_ENV": "test",
        "PORT": 5500
      }
    },
    "prod": {
      "command": "node ./dist/app.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "Anastase Tuyizere",
  "license": "ISC",
  "dependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/register": "^7.22.5",
    "babel-node": "^0.0.1-security",
    "better-npm-run": "^0.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "mocha": "^10.2.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "pg": "^8.11.2",
    "pg-hstore": "^2.3.4",
    "sendmail": "^1.6.1",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/node": "^7.18.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.18.10",
    "@babel/register": "^7.18.9",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "should": "^13.2.3"
  }
}
